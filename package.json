{
  "name": "chess-game",
  "version": "1.0.0",
  "description": "Chess game",
  "main": "./build/scripts/main.js",
  "author": {
    "name": "Jiří Pazdera",
    "email": "wow.brog@gmail.com",
    "url": "https://www.linkedin.com/in/ji%C5%99%C3%AD-pazdera-0043861a0/"
  },
  "scripts": {
    "build": "tsc && yarn postbuild",
    "postbuild": "copyfiles --flat src/index.html src/index.css build && copyfiles icons/**/* build",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "electron ./build/scripts/main.js",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "latest",
    "@electron-forge/maker-deb": "latest",
    "@electron-forge/maker-rpm": "latest",
    "@electron-forge/maker-squirrel": "latest",
    "@electron-forge/maker-zip": "latest",
    "copyfiles": "^2.2.0",
    "electron": "latest",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "prettier": "^1.19.1",
    "typescript": "latest",
    "@types/node": "^12.12.21"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chess_game"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
